# MaxClaim Docker Environment Variables
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://maxclaim:password@postgres:5432/maxclaim
POSTGRES_USER=maxclaim
POSTGRES_PASSWORD=your-secure-password

# API Keys
OPENAI_API_KEY=sk-...
SENDGRID_API_KEY=SG...
SENDGRID_FROM_EMAIL=noreply@maxclaim.com
STRIPE_SECRET_KEY=sk_...

# n8n Automation
N8N_USER=admin
N8N_PASSWORD=your-n8n-password
N8N_HOST=n8n.yourdomain.com

# Application
MAXCLAIM_APP_URL=https://app.maxclaim.com

# Optional: PgAdmin
PGADMIN_EMAIL=admin@maxclaim.dev
PGADMIN_PASSWORD=admin

# Optional: SSL
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem
